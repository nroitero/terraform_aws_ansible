resource "aws_instance" "db" {
  tags {
    Name = "app-test"
  }

  ami = "${data.aws_ami.image.id}"

  iam_instance_profile   = "${ aws_iam_instance_profile.role.name }"
  instance_type          = "t2.micro"
  key_name               = "${module.ssh_key_pair.key_name}"
  vpc_security_group_ids = ["${aws_security_group.default.id}"]
  subnet_id              = "${aws_subnet.subnet.id}"
  monitoring             = true

  provisioner "remote-exec" {
    inline = [
      "sudo apt update",
      "sudo apt install -y python",
    ]
  }

  provisioner "local-exec" {
    command = <<BAR
ansible-galaxy install -r ansible/requirements.yml
ansible-playbook -u ubuntu  --extra-vars 'hostname=app-test.${var.domain}' --private-key secrets/${module.ssh_key_pair.key_name}.pem -i '${self.public_ip},' ansible/mysql.yml ${var.ansible_verbosity}
BAR
  }

  connection {
    user        = "ubuntu"
    type        = "ssh"
    agent       = "true"
    timeout     = "10m"
    private_key = "${file("secrets/${module.ssh_key_pair.key_name}.pem")}"
  }

  lifecycle {
    create_before_destroy = true
    ignore_changes        = ["ami"]
  }
}

output "db ip" {
  value = ["${aws_instance.db.public_ip}"]
}
